<%- include('./partials/header.ejs') %>
<%- include('./partials/nav.ejs') %>

<div style="max-width: 520px; margin: 0 auto">
  <h1><%=title%></h1>
  
  <div>
    This is a blog where you can share your thoughts and experiences with the world. Create new posts and connect with other users.
  </div>

  <form method="post" action="/add-post">
    <div class="mb-3">
      <label for="title" class="form-label">Назва</label>
      <input
        required
        type="text"
        class="form-control"
        id="title"
        name="title"
      />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Текст</label>
      <input
        required
        type="text"
        class="form-control"
        id="description"
        name="description"
      />
    </div>
    <div class="mb-3">
      <label for="author" class="form-label">Прізвище</label>
      <input
        required
        type="text"
        class="form-control"
        id="author"
        name="author"
      />
    </div>
    <button type="submit" class="btn btn-primary">Створити</button>
  </form>
</div>

<%- include('./partials/footer.ejs') %>